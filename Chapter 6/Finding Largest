#include <stdio.h>

int main(int argc, const char * argv[]) {
    // insert code here...
   
   // int n=1;
   
    int largest =0;
    int n=1;
  
    
  
    while(n!=0)
    {
        
        printf("Enter a number:");
        scanf("%d",&n);
       
        
        if(n>largest)
        {
            largest = n;
            
        }
    }
    
   
    
    printf("The largest element is %d \n", largest);
  
    
    
    return 0;
}
